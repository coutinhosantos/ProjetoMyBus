<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/l"
    tools:context="br.com.aula.projeto.aula06.Adicionar">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/tela"
            android:layout_marginTop="100dp"
            >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:text="@string/lblnome"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtnome"
                    android:textColor="#FFF"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:text="@string/lblemail"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFF"
                    android:id="@+id/txtemail"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:text="@string/lblsenha"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#FFF"
                android:id="@+id/txtcadsenha"
                />


            <!--
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/txtsexo">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblm"
                        android:id="@+id/txtm"
                        android:checked="true"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblf"
                        android:id="@+id/txtf"/>
                </RadioGroup>-->

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblbtnenviar"
                android:textColor="#FFF"
                android:background="#42a5f5"
                android:layout_marginBottom="5dp"
                android:onClick="enviar"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:background="#42a5f5"
                android:text="@string/lblbtnvoltar"
                android:onClick="voltar"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
